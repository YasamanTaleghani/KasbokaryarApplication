<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="top|right"
                android:layout_margin="8dp"
                android:src="@drawable/ic_logo" />

            <TextView
                android:id="@+id/more_card1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:padding="4dp"
                android:gravity="center"
                android:text="آموزش"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:padding="4dp"
                android:gravity="center"
                android:text="ما در کسب و کار یار مباحث پیشرفته برنامه نویسی را با شما در میان میگذاریم"
                android:textSize="14sp"
                android:textStyle="normal" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <VideoView
                        android:id="@+id/lambda"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_margin="12sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:padding="4dp"
                        android:gravity="center"
                        android:layout_marginLeft="12dp"
                        android:text="lambda expressions"
                        android:textSize="11sp"
                        android:textColor="#FAA72D"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:padding="4dp"
                        android:gravity="center"
                        android:layout_marginLeft="12dp"
                        android:text="What are lambda expressions?"
                        android:textSize="12sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:padding="4dp"
                        android:gravity="left"
                        android:layout_marginLeft="12dp"
                        android:text="You use a lambda expression to create an anonymous function. Use the lambda declaration operator => to separate the lambda's parameter list from its body. To create a lambda expression, you specify input parameters (if any) on the left side of the lambda operator and an expression or a statement block on the other side. Any lambda expression can be converted to a delegate type."
                        android:textSize="11sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:padding="4dp"
                android:gravity="center"
                android:text="برخی از نمونه کارهای ما"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:padding="4dp"
                android:gravity="center"
                android:text="در این بخش برخی از کارها و پروژه های انجام شده سازمان ها و ادارات برای مشاهده کاربران گرامی درج شده است."
                android:textSize="14sp"
                android:textStyle="normal" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <TextView
                    android:id="@+id/hyp1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="@string/hyperlink"
                    android:textSize="11sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:gravity="center"
                    android:text="تیم ما سامانه ای را طراحی نموده است که با استفاده از آزمون های روانشناختی و اطلاعات پروژه تجزیه و تحلیل مشاغل (که سابقا توسط این موسسه انجام شده است) نسبت سنجش تناسب شغلی افراد اقدام می نماید."
                    android:textSize="11sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</layout>